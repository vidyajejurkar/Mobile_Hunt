<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:context="com.example.vidya.profilechanger.MainActivity">

    <TextView
        android:id="@+id/textView_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_info"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/trigger_text"
        android:layout_below="@+id/trigger_text"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="18dp"
        android:text="OK" />

    <EditText
        android:id="@+id/trigger_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/search_hint"
        android:inputType="text"
        android:layout_below="@+id/textView_hint"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="65dp">

        <requestFocus />
    </EditText>

</RelativeLayout>
